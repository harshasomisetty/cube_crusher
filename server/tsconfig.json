{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "src/bin"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
